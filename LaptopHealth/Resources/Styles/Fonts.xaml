<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Font Family Resources -->
    <!-- Default font for general text -->
    <FontFamily x:Key="DefaultFontFamily">Segoe UI</FontFamily>
    
    <!-- Custom Dongle font for navigation buttons -->
    <!-- Using the full pack URI with filename to ensure it works in both design and runtime -->
    <FontFamily x:Key="DongleFontFamily">pack://application:,,,/Resources/Fonts/Dongle-Regular.ttf#Dongle</FontFamily>
    
    <!-- You can define multiple custom fonts as needed -->
    <!-- <FontFamily x:Key="HeadlineFontFamily">pack://application:,,,/Resources/Fonts/#Your Headline Font</FontFamily> -->
    <!-- <FontFamily x:Key="BodyFontFamily">pack://application:,,,/Resources/Fonts/#Your Body Font</FontFamily> -->
    
</ResourceDictionary>
