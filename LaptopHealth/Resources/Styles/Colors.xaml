<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Core Colors (Only 5) -->
    <Color x:Key="WhiteColor">#FFFFFF</Color>
    <Color x:Key="PrimaryColor">#132779</Color>
    <Color x:Key="DarkGrayColor">#212121</Color>
    <Color x:Key="ErrorColor">#F44336</Color>
    <Color x:Key="SuccessColor">#4CAF50</Color>
    
    <!-- Brush Definitions -->
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource WhiteColor}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="DarkGrayBrush" Color="{StaticResource DarkGrayColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    
    <!-- Semantic Aliases for easier understanding -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource WhiteColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource DarkGrayColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource PrimaryColor}"/>
    
    <!-- Light Gray for Inactive Progress Indicators (derived from DarkGray with opacity) -->
    <SolidColorBrush x:Key="InactiveIndicatorBrush" Color="#D3D3D3"/>
    
</ResourceDictionary>
