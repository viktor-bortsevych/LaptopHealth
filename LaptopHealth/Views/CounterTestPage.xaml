<UserControl x:Class="LaptopHealth.Views.CounterTestPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <!-- Test Title -->
            <TextBlock Text="Counter Test" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10" 
                       HorizontalAlignment="Center"
                       Foreground="#333"/>
            
            <!-- Test Description -->
            <TextBlock Text="A simple test that demonstrates dependency injection with a counter service. Click 'Add' to increment the counter." 
                       FontSize="14" 
                       Margin="0,0,0,30" 
                       TextAlignment="Center" 
                       Foreground="#666"
                       TextWrapping="Wrap"
                       MaxWidth="600"/>
            
            <!-- Counter Display -->
            <TextBlock x:Name="CounterDisplay" 
                       Text="0" 
                       FontSize="48" 
                       FontWeight="Bold" 
                       TextAlignment="Center" 
                       Foreground="DodgerBlue"
                       Margin="0,0,0,30"/>
            
            <!-- Add Button -->
            <Button x:Name="AddButton" 
                    Content="Add" 
                    Width="120" 
                    Height="50" 
                    FontSize="16"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,10"
                    Click="AddButton_Click"/>
            
            <!-- Reset Button -->
            <Button x:Name="ResetButton" 
                    Content="Reset" 
                    Width="120" 
                    Height="50" 
                    FontSize="16"
                    HorizontalAlignment="Center"
                    Background="LightGray"
                    Click="ResetButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
