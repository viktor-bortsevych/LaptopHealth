<UserControl x:Class="LaptopHealth.Views.CounterTestPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/Resources/Styles/Colors.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/Resources/Styles/ButtonStyles.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/Resources/Styles/CommonStyles.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

	<Grid Background="{StaticResource BackgroundBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="0*"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1">
			<!-- Test Title -->
			<TextBlock Text="Counter Test" 
                       Style="{StaticResource Headline1}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

			<!-- Test Description -->
			<TextBlock Text="A simple test that demonstrates dependency injection with a counter service. Click 'Add' to increment the counter." 
                       Style="{StaticResource DescriptionText}"/>

			<!-- Counter Display -->
			<TextBlock x:Name="CounterDisplay" 
                       Text="0" 
                       Style="{StaticResource DisplayText}"/>

			<!-- Add Button -->
			<Button x:Name="AddButton" 
                    Content="Add" 
                    Style="{StaticResource LargeButtonStyle}"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,10"
                    Click="AddButton_Click"/>

			<!-- Reset Button -->
			<Button x:Name="ResetButton" 
                    Content="Reset" 
                    Style="{StaticResource SecondaryButtonStyle}"
                    Width="120"
                    Height="50"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    Click="ResetButton_Click"/>
		</StackPanel>
	</Grid>
</UserControl>
