<UserControl x:Class="LaptopHealth.Views.Tests.AudioTestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d" 
    d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/Fonts.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
            
            <!-- Slider Styles -->
            <Style x:Key="SliderRepeatButtonStyle" TargetType="RepeatButton">
                <Setter Property="SnapsToDevicePixels" Value="true"/>
                <Setter Property="OverridesDefaultStyle" Value="true"/>
                <Setter Property="IsTabStop" Value="false"/>
                <Setter Property="Focusable" Value="false"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RepeatButton">
                            <Border Height="6" 
                                    Background="{StaticResource InactiveIndicatorBrush}"
                                    CornerRadius="3"
                                    Margin="0"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <Style x:Key="SliderThumbStyle" TargetType="Thumb">
                <Setter Property="SnapsToDevicePixels" Value="true"/>
                <Setter Property="OverridesDefaultStyle" Value="true"/>
                <Setter Property="Height" Value="24"/>
                <Setter Property="Width" Value="24"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Thumb">
                            <Ellipse Fill="{StaticResource PrimaryBrush}" 
                                     Stroke="{StaticResource WhiteBrush}"
                                     StrokeThickness="2"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource WhiteBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Column: Main Content -->
        <Grid Grid.Column="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Stereo Balance Visualizer -->
            <Border Grid.Row="0"
                    Background="{StaticResource WhiteBrush}"
                    BorderBrush="{StaticResource PrimaryBrush}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="40"
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Stereo Balance Test" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,16"
                               HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Adjust the slider to test left and right audio channels" 
                               Style="{StaticResource BodyText}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,24"/>
                    
                    <Grid Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="L" 
                                   Grid.Column="0"
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,24,0"/>

                        <Slider Grid.Column="1"
                                Minimum="-1"
                                Maximum="1"
                                Value="{Binding StereoBalance, Mode=TwoWay}"
                                TickFrequency="0.1"
                                IsSnapToTickEnabled="True"
                                IsMoveToPointEnabled="True"
                                Focusable="True"
                                AutomationProperties.Name="Stereo Balance Slider"
                                Height="40"
                                VerticalAlignment="Center">
                            <Slider.Resources>
                                <Style TargetType="Slider">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Slider">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Track x:Name="PART_Track" Grid.Row="1">
                                                        <Track.DecreaseRepeatButton>
                                                            <RepeatButton Style="{StaticResource SliderRepeatButtonStyle}"/>
                                                        </Track.DecreaseRepeatButton>
                                                        <Track.Thumb>
                                                            <Thumb Style="{StaticResource SliderThumbStyle}"/>
                                                        </Track.Thumb>
                                                        <Track.IncreaseRepeatButton>
                                                            <RepeatButton Style="{StaticResource SliderRepeatButtonStyle}"/>
                                                        </Track.IncreaseRepeatButton>
                                                    </Track>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Slider.Resources>
                        </Slider>

                        <TextBlock Text="R" 
                                   Grid.Column="2"
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="24,0,0,0"/>
                    </Grid>

                    <TextBlock Text="{Binding StereoBalance, StringFormat='Balance: {0:F2}'}" 
                               FontSize="16"
                               FontWeight="Medium"
                               Foreground="{StaticResource PrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,0"/>
                    
                    <!-- Quick Position Buttons -->
                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0"
                                Content="Left"
                                Style="{StaticResource OutlineButtonStyle}"
                                Command="{Binding SetBalanceLeftCommand}"
                                Height="36"
                                Margin="0,0,4,0"
                                Padding="0"/>
                        
                        <Button Grid.Column="1"
                                Content="Mid"
                                Style="{StaticResource OutlineButtonStyle}"
                                Command="{Binding SetBalanceMidCommand}"
                                Height="36"
                                Margin="4,0,4,0"
                                Padding="0"/>
                        
                        <Button Grid.Column="2"
                                Content="Right"
                                Style="{StaticResource OutlineButtonStyle}"
                                Command="{Binding SetBalanceRightCommand}"
                                Height="36"
                                Margin="4,0,0,0"
                                Padding="0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Test Audio Selection -->
            <Border Grid.Row="1" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Select Test Audio" 
                               Style="{StaticResource HeadlineText}"
                               FontSize="16"
                               Margin="0,0,0,12"/>

                    <TextBlock Text="Choose what sound to play for testing:" 
                               Style="{StaticResource BodyText}"
                               FontSize="12"
                               Foreground="{StaticResource DarkGrayBrush}"
                               Margin="0,0,0,8"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox Grid.Column="0"
                                  Style="{StaticResource DefaultComboBoxStyle}"
                                  ItemsSource="{Binding TestAudioOptions}"
                                  SelectedItem="{Binding SelectedTestAudio, Mode=TwoWay}"
                                  Height="40"
                                  Margin="0,0,8,0"
                                  KeyDown="ComboBox_KeyDown"/>

                        <Button Grid.Column="1"
                                Content="+"
                                Style="{StaticResource DefaultButtonStyle}"
                                Command="{Binding AddAudioFileCommand}"
                                Width="40"
                                Height="40"
                                FontSize="20"
                                FontWeight="Bold"
                                Padding="0,0,0,2"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                ToolTip="Add audio file from your computer"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Right Column: Controls -->
        <Grid Grid.Column="1" Margin="0,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Select Output Device Label -->
            <Border Grid.Row="0" 
                    Style="{StaticResource CardStyle}"
                    Padding="16,12">
                <TextBlock Text="Select Output Device" 
                           Style="{StaticResource HeadlineText}"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           Margin="0"/>
            </Border>

            <!-- Output Device ComboBox -->
            <Border Grid.Row="1" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Available Devices" 
                               Style="{StaticResource BodyText}"
                               FontSize="12"
                               Foreground="{StaticResource DarkGrayBrush}"
                               Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <ComboBox Grid.Column="0"
                                  ItemsSource="{Binding OutputDevices}"
                                  SelectedItem="{Binding SelectedOutputDevice}"
                                  Style="{StaticResource DefaultComboBoxStyle}"
                                  Height="40"
                                  Margin="0,0,8,0"
                                  IsEnabled="{Binding IsNotPlaying}"
                                  KeyDown="ComboBox_KeyDown"/>
                        
                        <!-- Refresh Button using MDL2 Icon -->
                        <Button Grid.Column="1"
                                Content="&#xE72C;"
                                FontFamily="{StaticResource IconFontFamily}"
                                Style="{StaticResource TextButtonStyle}"
                                FontSize="24"
                                Padding="0"
                                Command="{Binding RefreshDevicesCommand}"
                                IsEnabled="{Binding IsNotPlaying}"
                                ToolTip="Refresh audio device list"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Playback Controls -->
            <Border Grid.Row="2" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Playback Controls" 
                               Style="{StaticResource BodyText}"
                               FontSize="12"
                               Foreground="{StaticResource DarkGrayBrush}"
                               Margin="0,0,0,8"/>
                    
                    <Button Content="Play Test Audio"
                            Style="{StaticResource DefaultButtonStyle}"
                            Command="{Binding PlayCommand}"
                            Height="44"
                            Margin="0,0,0,8"/>

                    <Button Content="Stop"
                            Style="{StaticResource OutlineButtonStyle}"
                            Command="{Binding StopCommand}"
                            Height="44"
                            IsEnabled="{Binding CanStop}"/>

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,12,0,0"
                                Visibility="{Binding IsPlaying, Converter={StaticResource BoolToVisConverter}}">
                        <Ellipse Width="12" Height="12" 
                                 Fill="{StaticResource SuccessBrush}"
                                 Margin="0,0,8,0">
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard Name="PulseAnimation">
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                           From="1.0" To="0.3" Duration="0:0:0.8"
                                                           AutoReverse="True"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="Unloaded">
                                    <StopStoryboard BeginStoryboardName="PulseAnimation"/>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        <TextBlock Text="Playing..." 
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="{StaticResource SuccessBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
