<UserControl x:Class="LaptopHealth.Views.CameraTestPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/Fonts.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Background="{StaticResource WhiteBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Column: Camera Preview -->
        <Grid Grid.Column="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Camera View -->
            <Border Grid.Row="0"
                Background="{StaticResource DarkGrayBrush}"
                BorderBrush="{StaticResource PrimaryBrush}"
                BorderThickness="2"
                CornerRadius="8"
                Padding="0">

                <Border Background="{StaticResource DarkGrayBrush}" CornerRadius="8" ClipToBounds="True">
                    <Grid>
                        <!-- Placeholder for Camera Feed - Using MDL2 Camera Icon -->
                        <Viewbox Stretch="Uniform"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Visibility="{Binding IsCameraPlaceholderVisible, Converter={StaticResource BoolToVisConverter}}">
                            <TextBlock Text="&#xE722;" 
                                      FontFamily="{StaticResource IconFontFamily}"
                                      Foreground="{StaticResource WhiteBrush}"
                                      FontSize="120"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Opacity="0.3"
                                      LineHeight="1"/>
                        </Viewbox>
                        
                        <!-- Camera Preview Image -->
                        <Image Source="{Binding CameraPreviewSource}"
                              Stretch="UniformToFill"
                              Visibility="{Binding IsCameraPreviewVisible, Converter={StaticResource BoolToVisConverter}}"/>
                        
                        <!-- Overlay Text -->
                        <TextBlock Text="{Binding CameraStatusText}"
                                  Style="{StaticResource HeadlineText}"
                                  Foreground="{StaticResource WhiteBrush}"
                                  FontSize="28"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  IsHitTestVisible="False"/>
                    </Grid>
                </Border>
            </Border>
            
            <!-- Description -->
            <Border Grid.Row="1" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,16,0,0">
                <StackPanel>
                    <TextBlock Text="Camera Test" 
                              Style="{StaticResource HeadlineText}"
                              FontSize="20"
                              Margin="0,0,0,8"/>
                    <TextBlock Text="This test demonstrates camera device enumeration and control. Select a camera device from the dropdown and use the start/stop button to control the camera feed." 
                              Style="{StaticResource BodyText}"
                              TextWrapping="Wrap"
                              Foreground="{StaticResource DarkGrayBrush}"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Right Column: Controls -->
        <Grid Grid.Column="1" Margin="0,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Select Camera Device Label -->
            <Border Grid.Row="0" 
                    Style="{StaticResource CardStyle}"
                    Padding="16,12">
                <TextBlock Text="Select Camera Device" 
                          Style="{StaticResource HeadlineText}"
                          FontSize="18"
                          HorizontalAlignment="Center"
                          Margin="0"/>
            </Border>
            
            <!-- Camera Device ComboBox -->
            <Border Grid.Row="1" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Available Devices" 
                              Style="{StaticResource BodyText}"
                              FontSize="12"
                              Foreground="{StaticResource DarkGrayBrush}"
                              Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding AvailableDevices}"
                             SelectedItem="{Binding SelectedDevice}"
                             Style="{StaticResource DefaultComboBoxStyle}"
                             Height="40"
                             IsEnabled="{Binding IsDeviceComboBoxEnabled}"/>
                    <TextBlock Text="No camera devices found"
                              Style="{StaticResource BodyText}"
                              FontSize="12"
                              Foreground="{StaticResource DarkGrayBrush}"
                              Margin="0,8,0,0"
                              Visibility="{Binding IsNoDevicesMessageVisible, Converter={StaticResource BoolToVisConverter}}"
                              TextAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Start/Stop Button and Refresh Button -->
            <Border Grid.Row="2" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Camera Control" 
                              Style="{StaticResource BodyText}"
                              FontSize="12"
                              Foreground="{StaticResource DarkGrayBrush}"
                              Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0"
                               Content="{Binding StartStopButtonContent}"
                               Style="{StaticResource DefaultButtonStyle}"
                               Height="44"
                               Command="{Binding StartStopCameraCommand}"
                               IsEnabled="{Binding IsStartStopButtonEnabled}"
                               Margin="0,0,8,0"/>
                        
                        <!-- Refresh Button using MDL2 Icon -->
                        <Button Grid.Column="1"
                               Content="&#xE72C;"
                               FontFamily="{StaticResource IconFontFamily}"
                               Style="{StaticResource TextButtonStyle}"
                               FontSize="24"
                               Padding="0"
                               Command="{Binding RefreshDevicesCommand}"
                               IsEnabled="{Binding IsRefreshButtonEnabled}"
                               ToolTip="Refresh camera device list"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Last Action -->
            <Border Grid.Row="3" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Last Action" 
                              Style="{StaticResource BodyText}"
                              FontSize="12"
                              Foreground="{StaticResource DarkGrayBrush}"
                              Margin="0,0,0,8"/>
                    <Border Background="{StaticResource WhiteBrush}"
                           BorderBrush="{StaticResource PrimaryBrush}"
                           BorderThickness="1"
                           CornerRadius="4"
                           Padding="12,8">
                        <TextBlock Text="{Binding LastActionText}"
                                  Style="{StaticResource BodyText}"
                                  Foreground="{StaticResource PrimaryBrush}"
                                  TextWrapping="Wrap"
                                  FontWeight="Medium"
                                  Margin="0"/>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
