<UserControl x:Class="LaptopHealth.Views.CameraTestPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/Fonts.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Background="{StaticResource WhiteBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Column: Camera Preview -->
        <Grid Grid.Column="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Row 1, Col 1: Camera View Placeholder -->
            <Border Grid.Row="0"
                Background="{StaticResource DarkGrayBrush}"
                BorderBrush="{StaticResource PrimaryBrush}"
                BorderThickness="2"
                CornerRadius="8"
                Padding="0">

                <Border Background="{StaticResource DarkGrayBrush}"
                    CornerRadius="8">

                    <Grid x:Name="ClipGrid" SizeChanged="ClipGrid_SizeChanged">
                        <Grid.Clip>
                            <RectangleGeometry x:Name="GridClip"
                                   RadiusX="8" RadiusY="8"/>
                            <!-- CHANGED FROM 6 TO 8 -->
                        </Grid.Clip>

                        <!-- Aspect Ratio Container: 16:9 -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- This dummy control maintains 16:9 aspect ratio -->
                        <Canvas Visibility="Hidden">
                            <Rectangle Width="16" Height="9"/>
                        </Canvas>
                        
                        <!-- Placeholder for Camera Feed -->
                        <Viewbox x:Name="CameraPlaceholder"
                                 Stretch="Uniform"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center">
                            <TextBlock Text="📷" 
                                      Foreground="{StaticResource WhiteBrush}"
                                      FontSize="120"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Opacity="0.3"
                                      LineHeight="1"/>
                        </Viewbox>
                        
                        <!-- Camera Preview Image (Will be used when camera is active) -->
                        <Image x:Name="CameraPreview" 
                              Stretch="UniformToFill"
                              Visibility="Collapsed"/>
                        
                        <!-- Overlay Text -->
                        <TextBlock x:Name="CameraStatusText"
                                  Text="Camera Preview" 
                                  Style="{StaticResource HeadlineText}"
                                  Foreground="{StaticResource WhiteBrush}"
                                  FontSize="28"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  IsHitTestVisible="False"/>
                    </Grid>
                </Border>
            </Border>
            
            <!-- Row 2, Col 1: Description -->
            <Border Grid.Row="1" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,16,0,0">
                <StackPanel>
                    <TextBlock Text="Camera Test" 
                              Style="{StaticResource HeadlineText}"
                              FontSize="20"
                              Margin="0,0,0,8"/>
                    <TextBlock Text="This test demonstrates camera device enumeration and control. Select a camera device from the dropdown and use the start/stop button to control the camera feed." 
                              Style="{StaticResource BodyText}"
                              TextWrapping="Wrap"
                              Foreground="{StaticResource DarkGrayBrush}"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Right Column: Controls -->
        <Grid Grid.Column="1" Margin="0,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Row 1, Col 2: Select Camera Device Label -->
            <Border Grid.Row="0" 
                    Style="{StaticResource CardStyle}"
                    Padding="16,12">
                <TextBlock Text="Select Camera Device" 
                          Style="{StaticResource HeadlineText}"
                          FontSize="18"
                          HorizontalAlignment="Center"
                          Margin="0"/>
            </Border>
            
            <!-- Row 2, Col 2: Camera Device ComboBox -->
            <Border Grid.Row="1" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Available Devices" 
                              Style="{StaticResource BodyText}"
                              FontSize="12"
                              Foreground="{StaticResource DarkGrayBrush}"
                              Margin="0,0,0,8"/>
                    <ComboBox x:Name="DeviceComboBox"
                             Style="{StaticResource DefaultComboBoxStyle}"
                             Height="40"
                             SelectionChanged="DeviceComboBox_SelectionChanged"
                             IsEnabled="False"/>
                    <TextBlock x:Name="NoDevicesMessage"
                              Text="No camera devices found"
                              Style="{StaticResource BodyText}"
                              FontSize="12"
                              Foreground="{StaticResource DarkGrayBrush}"
                              Margin="0,8,0,0"
                              Visibility="Visible"
                              TextAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Row 3, Col 2: Start/Stop Button and Refresh Button -->
            <Border Grid.Row="2" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Camera Control" 
                              Style="{StaticResource BodyText}"
                              FontSize="12"
                              Foreground="{StaticResource DarkGrayBrush}"
                              Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0"
                               x:Name="StartStopButton"
                               Content="Start Camera"
                               Style="{StaticResource DefaultButtonStyle}"
                               Height="44"
                               Click="StartStopButton_Click"
                               Margin="0,0,8,0"/>
                        
                        <!-- Text Button -->
                        <Button Grid.Column="1"
                               x:Name="RefreshDevicesButton"
                               Content="🔄"
                               Style="{StaticResource TextButtonStyle}"
                               FontSize="30"
                               Padding="0"
                               Click="RefreshDevicesButton_Click"
                               ToolTip="Refresh camera device list"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Row 4, Col 2: Last Action -->
            <Border Grid.Row="3" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Last Action" 
                              Style="{StaticResource BodyText}"
                              FontSize="12"
                              Foreground="{StaticResource DarkGrayBrush}"
                              Margin="0,0,0,8"/>
                    <Border Background="{StaticResource WhiteBrush}"
                           BorderBrush="{StaticResource PrimaryBrush}"
                           BorderThickness="1"
                           CornerRadius="4"
                           Padding="12,8">
                        <TextBlock x:Name="LastActionText"
                                  Text="None"
                                  Style="{StaticResource BodyText}"
                                  Foreground="{StaticResource PrimaryBrush}"
                                  TextWrapping="Wrap"
                                  FontWeight="Medium"
                                  Margin="0"/>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
