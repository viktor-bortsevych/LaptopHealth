<UserControl x:Class="LaptopHealth.Views.CameraTestPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/Fonts.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Background="{StaticResource WhiteBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Column: Camera Preview -->
        <Grid Grid.Column="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Row 1, Col 1: Camera View Placeholder -->
            <Border Grid.Row="0" 
                    Style="{StaticResource CardStyle}"
                    Background="{StaticResource WhiteBrush}"
                    BorderBrush="{StaticResource PrimaryBrush}"
                    BorderThickness="2"
                    Padding="0">
                <Grid>
                    <!-- Placeholder for Camera Feed -->
                    <Viewbox>
                        <TextBlock Text="📷" 
                                  Foreground="{StaticResource PrimaryBrush}"
                                  FontSize="120"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Opacity="0.3"/>
                    </Viewbox>
                    
                    <!-- Camera Preview Image (Will be used when camera is active) -->
                    <Image x:Name="CameraPreview" 
                          Stretch="Uniform"
                          Visibility="Collapsed"/>
                    
                    <!-- Overlay Text -->
                    <TextBlock x:Name="CameraStatusText"
                              Text="Camera Preview" 
                              Style="{StaticResource HeadlineText}"
                              Foreground="{StaticResource PrimaryBrush}"
                              FontSize="28"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- Row 2, Col 1: Description -->
            <Border Grid.Row="1" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,16,0,0">
                <StackPanel>
                    <TextBlock Text="Camera Test" 
                              Style="{StaticResource HeadlineText}"
                              FontSize="20"
                              Margin="0,0,0,8"/>
                    <TextBlock Text="This test demonstrates camera device enumeration and control. Select a camera device from the dropdown and use the start/stop button to control the camera feed." 
                              Style="{StaticResource BodyText}"
                              TextWrapping="Wrap"
                              Foreground="{StaticResource DarkGrayBrush}"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Right Column: Controls -->
        <Grid Grid.Column="1" Margin="0,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Row 1, Col 2: Select Camera Device Label -->
            <Border Grid.Row="0" 
                    Style="{StaticResource CardStyle}"
                    Padding="16,12">
                <TextBlock Text="Select Camera Device" 
                          Style="{StaticResource HeadlineText}"
                          FontSize="18"
                          HorizontalAlignment="Center"
                          Margin="0"/>
            </Border>
            
            <!-- Row 2, Col 2: Camera Device ComboBox -->
            <Border Grid.Row="1" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Available Devices" 
                              Style="{StaticResource BodyText}"
                              FontSize="12"
                              Foreground="{StaticResource DarkGrayBrush}"
                              Margin="0,0,0,8"/>
                    <ComboBox x:Name="DeviceComboBox"
                             Style="{StaticResource DefaultComboBoxStyle}"
                             Height="40"
                             SelectionChanged="DeviceComboBox_SelectionChanged"/>
                </StackPanel>
            </Border>
            
            <!-- Row 3, Col 2: Start/Stop Button -->
            <Border Grid.Row="2" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Camera Control" 
                              Style="{StaticResource BodyText}"
                              FontSize="12"
                              Foreground="{StaticResource DarkGrayBrush}"
                              Margin="0,0,0,8"/>
                    <Button x:Name="StartStopButton"
                           Content="Start Camera"
                           Style="{StaticResource DefaultButtonStyle}"
                           Height="44"
                           Click="StartStopButton_Click"/>
                </StackPanel>
            </Border>
            
            <!-- Row 4, Col 2: Last Action -->
            <Border Grid.Row="3" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Last Action" 
                              Style="{StaticResource BodyText}"
                              FontSize="12"
                              Foreground="{StaticResource DarkGrayBrush}"
                              Margin="0,0,0,8"/>
                    <Border Background="{StaticResource WhiteBrush}"
                           BorderBrush="{StaticResource PrimaryBrush}"
                           BorderThickness="1"
                           CornerRadius="4"
                           Padding="12,8">
                        <TextBlock x:Name="LastActionText"
                                  Text="None"
                                  Style="{StaticResource BodyText}"
                                  Foreground="{StaticResource PrimaryBrush}"
                                  TextWrapping="Wrap"
                                  FontWeight="Medium"
                                  Margin="0"/>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
