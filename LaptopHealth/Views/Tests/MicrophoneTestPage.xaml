<UserControl x:Class="LaptopHealth.Views.Tests.MicrophoneTestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LaptopHealth.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d" 
    d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/Fonts.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>

            <!-- Value converter for frequency magnitude to bar height -->
            <local:FrequencyMagnitudeConverter x:Key="FrequencyMagnitudeConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource WhiteBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Column: Frequency Visualizer -->
        <Grid Grid.Column="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Frequency Bars Visualization -->
            <Border Grid.Row="0"
                Background="{StaticResource WhiteBrush}"
                BorderBrush="{StaticResource PrimaryBrush}"
                BorderThickness="2"
                CornerRadius="8"
                Padding="20">

                <Border Background="{StaticResource WhiteBrush}" CornerRadius="8" ClipToBounds="True">
                    <Grid>
                        <!-- No Device Message -->
                        <Viewbox Stretch="Uniform"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Visibility="{Binding IsNoDevicesMessageVisible, Converter={StaticResource BoolToVisConverter}}">
                            <TextBlock Text="&#xE720;" 
                                      FontFamily="{StaticResource IconFontFamily}"
                                      Foreground="{StaticResource DarkGrayBrush}"
                                      FontSize="120"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Opacity="0.3"
                                      LineHeight="1"/>
                        </Viewbox>

                        <!-- Frequency Bars Container with responsive sizing -->
                        <Viewbox Stretch="Fill"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"
                                 Margin="10">
                            <Canvas Width="416" Height="250">
                                <ItemsControl ItemsSource="{Binding FrequencyBands}"
                                             HorizontalAlignment="Stretch"
                                             VerticalAlignment="Stretch">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="32" Rows="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="416" Height="250"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="2" Height="250" Width="12">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Animated Bar -->
                                                <Border Grid.Row="1"
                                                        Background="{StaticResource PrimaryBrush}"
                                                        CornerRadius="2"
                                                        Opacity="0.9"
                                                        Height="{Binding Magnitude, Converter={StaticResource FrequencyMagnitudeConverter}}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Canvas>
                        </Viewbox>

                        <!-- Overlay Status Text -->
                        <TextBlock Text="{Binding MicrophoneStatusText}"
                                  Style="{StaticResource HeadlineText}"
                                  Foreground="{StaticResource WhiteBrush}"
                                  FontSize="28"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  IsHitTestVisible="False"
                                  Visibility="{Binding IsNoDevicesMessageVisible, Converter={StaticResource BoolToVisConverter}}"/>
                    </Grid>
                </Border>
            </Border>

            <!-- Recording and Playback Controls -->
            <Border Grid.Row="1" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,16,0,16">
                <StackPanel>
                    <TextBlock Text="Recording &amp; Playback" 
                              Style="{StaticResource HeadlineText}"
                              FontSize="16"
                              Margin="0,0,0,12"/>

                    <!-- Recording Row -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                               Content="{Binding RecordingButtonContent}"
                               Style="{StaticResource DefaultButtonStyle}"
                               Height="40"
                               Command="{Binding StartStopRecordingCommand}"
                               IsEnabled="{Binding IsRecordingButtonEnabled}"
                               MinWidth="140"/>

                        <Border Grid.Column="1"
                               Background="{StaticResource WhiteBrush}"
                               BorderBrush="{StaticResource PrimaryBrush}"
                               BorderThickness="1"
                               CornerRadius="4"
                               Padding="12,8"
                               MinWidth="80"
                               Margin="12,0,0,0">
                            <TextBlock Text="{Binding RecordingTimerText}"
                                      Style="{StaticResource BodyText}"
                                      Foreground="{StaticResource PrimaryBrush}"
                                      FontWeight="Medium"
                                      TextAlignment="Center"
                                      Margin="0"/>
                        </Border>

                        <Button Grid.Column="2"
                               Content="{Binding PlaybackButtonContent}"
                               Style="{StaticResource DefaultButtonStyle}"
                               Height="40"
                               Command="{Binding StartStopPlaybackCommand}"
                               IsEnabled="{Binding IsPlaybackButtonEnabled}"
                               MinWidth="140"
                               Margin="12,0,0,0"/>

                        <Border Grid.Column="3"
                            Background="{StaticResource WhiteBrush}"
                            BorderBrush="{StaticResource PrimaryBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12,8"
                            MinWidth="100"
                            Margin="12,0,0,0">
                            <TextBlock Text="{Binding RecordingStatusText}"
                                Style="{StaticResource BodyText}"
                                Foreground="{StaticResource PrimaryBrush}"
                                FontWeight="Medium"
                                TextAlignment="Center"
                                Margin="0"/>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Description -->
            <Border Grid.Row="2" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,16,0,0">
                <StackPanel>
                    <TextBlock Text="Microphone Test" 
                              Style="{StaticResource HeadlineText}"
                              FontSize="20"
                              Margin="0,0,0,8"/>
                    <TextBlock Text="This test demonstrates microphone device enumeration and real-time frequency visualization. Select a microphone device from the dropdown and use the start/stop button to see the animated frequency bars responding to audio input." 
                              Style="{StaticResource BodyText}"
                              TextWrapping="Wrap"
                              Foreground="{StaticResource DarkGrayBrush}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Right Column: Controls -->
        <Grid Grid.Column="1" Margin="0,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Select Microphone Device Label -->
            <Border Grid.Row="0" 
                    Style="{StaticResource CardStyle}"
                    Padding="16,12">
                <TextBlock Text="Select Microphone Device" 
                          Style="{StaticResource HeadlineText}"
                          FontSize="18"
                          HorizontalAlignment="Center"
                          Margin="0"/>
            </Border>

            <!-- Microphone Device ComboBox -->
            <Border Grid.Row="1" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Available Devices" 
                              Style="{StaticResource BodyText}"
                              FontSize="12"
                              Foreground="{StaticResource DarkGrayBrush}"
                              Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding AvailableDevices}"
                             SelectedItem="{Binding SelectedDevice}"
                             Style="{StaticResource DefaultComboBoxStyle}"
                             Height="40"
                             IsEnabled="{Binding IsDeviceComboBoxEnabled}"/>
                    <TextBlock Text="No microphone devices found"
                              Style="{StaticResource BodyText}"
                              FontSize="12"
                              Foreground="{StaticResource DarkGrayBrush}"
                              Margin="0,8,0,0"
                              Visibility="{Binding IsNoDevicesMessageVisible, Converter={StaticResource BoolToVisConverter}}"
                              TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Start/Stop Button and Refresh Button -->
            <Border Grid.Row="2" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Microphone Control" 
                              Style="{StaticResource BodyText}"
                              FontSize="12"
                              Foreground="{StaticResource DarkGrayBrush}"
                              Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                               Content="{Binding StartStopButtonContent}"
                               Style="{StaticResource DefaultButtonStyle}"
                               Height="44"
                               Command="{Binding StartStopMicrophoneCommand}"
                               IsEnabled="{Binding IsStartStopButtonEnabled}"
                               Margin="0,0,8,0"/>

                        <!-- Refresh Button using MDL2 Icon -->
                        <Button Grid.Column="1"
                               Content="&#xE72C;"
                               FontFamily="{StaticResource IconFontFamily}"
                               Style="{StaticResource TextButtonStyle}"
                               FontSize="24"
                               Padding="0"
                               Command="{Binding RefreshDevicesCommand}"
                               IsEnabled="{Binding IsRefreshButtonEnabled}"
                               ToolTip="Refresh microphone device list"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Last Action -->
            <Border Grid.Row="3" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Last Action" 
                              Style="{StaticResource BodyText}"
                              FontSize="12"
                              Foreground="{StaticResource DarkGrayBrush}"
                              Margin="0,0,0,8"/>
                    <Border Background="{StaticResource WhiteBrush}"
                           BorderBrush="{StaticResource PrimaryBrush}"
                           BorderThickness="1"
                           CornerRadius="4"
                           Padding="12,8">
                        <TextBlock Text="{Binding LastActionText}"
                                  Style="{StaticResource BodyText}"
                                  Foreground="{StaticResource PrimaryBrush}"
                                  TextWrapping="Wrap"
                                  FontWeight="Medium"
                                  Margin="0"/>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
