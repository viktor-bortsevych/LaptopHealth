<UserControl x:Class="LaptopHealth.Views.KeyboardTestPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LaptopHealth.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1044.5"
             Focusable="True">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/Fonts.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="{StaticResource WhiteBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="10,10,10,10">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10" Name="MainStackPanel">
                <!-- Title -->
                <TextBlock Text="KEYBOARD CHECK" 
                           Style="{StaticResource HeadlineText}"
                           FontSize="28"
                           TextAlignment="Center"
                           Margin="0,0,0,15"
                           TextWrapping="Wrap"/>

                <!-- Instructions -->
                <TextBlock Text="Press any key to test your keyboard" 
                           Style="{StaticResource BodyText}"
                           FontSize="13"
                           TextAlignment="Center"
                           Margin="0,0,0,15"
                           TextWrapping="Wrap"/>

                <!-- Two Column Layout: Last Key and History -->
                <Grid HorizontalAlignment="Center" Width="1000" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Last Pressed Key Display -->
                    <Border Grid.Column="0"
                            MinHeight="120" 
                            Background="{StaticResource WhiteBrush}" 
                            CornerRadius="10"
                            BorderThickness="2"
                            BorderBrush="{StaticResource PrimaryBrush}"
                            Padding="20">
                        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Last Key Pressed:" 
                                           Style="{StaticResource BodyText}"
                                           FontSize="12"
                                           Margin="0,0,0,8"
                                           TextAlignment="Center"/>
                                <TextBlock Text="{Binding LastKeyPressed}" 
                                           Style="{StaticResource HeadlineText}"
                                           FontSize="24"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           TextAlignment="Center"
                                           FontWeight="Bold"
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Right: Key Press History -->
                    <Border Grid.Column="2"
                            MinHeight="120"
                            Background="{StaticResource WhiteBrush}" 
                            CornerRadius="10"
                            BorderThickness="2"
                            BorderBrush="{StaticResource PrimaryBrush}"
                            Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="Key Press History:" 
                                       Style="{StaticResource BodyText}"
                                       FontSize="12"
                                       Margin="0,0,0,10"
                                       TextAlignment="Center"/>

                            <!-- Horizontal scrollable history -->
                            <ScrollViewer Grid.Row="1"
                                          HorizontalScrollBarVisibility="Hidden" 
                                          VerticalScrollBarVisibility="Disabled"
                                          VerticalAlignment="Center">
                                <ItemsControl ItemsSource="{Binding KeyPressHistory}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource PrimaryBrush}"
                                                    CornerRadius="6"
                                                    Padding="12,8"
                                                    Margin="0,0,8,0"
                                                    MinWidth="50">
                                                <TextBlock Text="{Binding}" 
                                                           Style="{StaticResource BodyText}"
                                                           FontSize="11"
                                                           TextAlignment="Center"
                                                           Foreground="{StaticResource WhiteBrush}"
                                                           FontWeight="Medium"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- Empty state message -->
                            <TextBlock Grid.Row="1"
                                       Text="No keys pressed yet" 
                                       Style="{StaticResource BodyText}"
                                       FontSize="11"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       Opacity="0.6"
                                       Visibility="{Binding KeyPressHistory.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Keyboard Layout with Viewbox for automatic scaling -->
                <Viewbox Stretch="Uniform" StretchDirection="DownOnly" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <StackPanel>

                            <!-- Row 1: Esc, F1-F12, Del -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <Button Content="Esc" x:Name="KeyEsc" Width="40" Height="35" Tag="Escape" Style="{StaticResource KeyboardButtonStyle}" FontSize="9" Margin="2"/>
                                <Button Content="F1" x:Name="KeyF1" Width="40" Height="35" Tag="F1" Style="{StaticResource KeyboardButtonStyle}" FontSize="9" Margin="2"/>
                                <Button Content="F2" x:Name="KeyF2" Width="40" Height="35" Tag="F2" Style="{StaticResource KeyboardButtonStyle}" FontSize="9" Margin="2"/>
                                <Button Content="F3" x:Name="KeyF3" Width="40" Height="35" Tag="F3" Style="{StaticResource KeyboardButtonStyle}" FontSize="9" Margin="2"/>
                                <Button Content="F4" x:Name="KeyF4" Width="40" Height="35" Tag="F4" Style="{StaticResource KeyboardButtonStyle}" FontSize="9" Margin="2"/>
                                <Button Content="F5" x:Name="KeyF5" Width="40" Height="35" Tag="F5" Style="{StaticResource KeyboardButtonStyle}" FontSize="9" Margin="2"/>
                                <Button Content="F6" x:Name="KeyF6" Width="40" Height="35" Tag="F6" Style="{StaticResource KeyboardButtonStyle}" FontSize="9" Margin="2"/>
                                <Button Content="F7" x:Name="KeyF7" Width="40" Height="35" Tag="F7" Style="{StaticResource KeyboardButtonStyle}" FontSize="9" Margin="2"/>
                                <Button Content="F8" x:Name="KeyF8" Width="40" Height="35" Tag="F8" Style="{StaticResource KeyboardButtonStyle}" FontSize="9" Margin="2"/>
                                <Button Content="F9" x:Name="KeyF9" Width="40" Height="35" Tag="F9" Style="{StaticResource KeyboardButtonStyle}" FontSize="9" Margin="2"/>
                                <Button Content="F10" x:Name="KeyF10" Width="40" Height="35" Tag="F10" Style="{StaticResource KeyboardButtonStyle}" FontSize="9" Margin="2"/>
                                <Button Content="F11" x:Name="KeyF11" Width="40" Height="35" Tag="F11" Style="{StaticResource KeyboardButtonStyle}" FontSize="9" Margin="2"/>
                                <Button Content="F12" x:Name="KeyF12" Width="40" Height="35" Tag="F12" Style="{StaticResource KeyboardButtonStyle}" FontSize="9" Margin="2"/>
                                <Button Content="Delete" x:Name="KeyDelete" Width="76" Height="35" Tag="Delete" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="2"/>
                                <Button Content="PrSc" x:Name="KeyPrint" Width="40" Height="35" Tag="PrintScreen" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="8,2,8,2"/>
                                <Button Content="ScrL" x:Name="KeyScrollLock" Width="40" Height="35" Tag="Scroll" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="2"/>
                                <Button Content="Paus" x:Name="KeyPause" Width="40" Height="35" Tag="Pause" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="2"/>
                                <Button Content="Home" x:Name="KeyHome" Width="40" Height="35" Tag="Home" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="2"/>
                                <Button Content="End" x:Name="KeyEnd" Width="40" Height="35" Tag="End" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="2"/>
                            </StackPanel>

                            <!-- Row 2: Numbers -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <Button Content="`" x:Name="KeyBacktick" Width="40" Height="35" Tag="OemTilde" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="1" x:Name="Key1" Width="40" Height="35" Tag="D1" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="2" x:Name="Key2" Width="40" Height="35" Tag="D2" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="3" x:Name="Key3" Width="40" Height="35" Tag="D3" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="4" x:Name="Key4" Width="40" Height="35" Tag="D4" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="5" x:Name="Key5" Width="40" Height="35" Tag="D5" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="6" x:Name="Key6" Width="40" Height="35" Tag="D6" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="7" x:Name="Key7" Width="40" Height="35" Tag="D7" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="8" x:Name="Key8" Width="40" Height="35" Tag="D8" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="9" x:Name="Key9" Width="40" Height="35" Tag="D9" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="0" x:Name="Key0" Width="40" Height="35" Tag="D0" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="-" x:Name="KeyMinus" Width="40" Height="35" Tag="OemMinus" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="=" x:Name="KeyEquals" Width="40" Height="35" Tag="OemPlus" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="Backspace" x:Name="KeyBackspace" Width="76" Height="35" Tag="Back" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="2"/>
                                <Button Content="PgUp" x:Name="KeyPageUp" Width="40" Height="35" Tag="PageUp" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="8,2,8,2"/>
                                <Button Content="NumLock" x:Name="KeyNumLock" Width="40" Height="35" Tag="NumLock" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="2"/>
                                <Button Content="/" x:Name="KeyNumDivide" Width="40" Height="35" Tag="Divide" Style="{StaticResource KeyboardButtonStyle}" FontSize="12" Margin="2"/>
                                <Button Content="*" x:Name="KeyNumMultiply" Width="40" Height="35" Tag="Multiply" Style="{StaticResource KeyboardButtonStyle}" FontSize="12" Margin="2"/>
                                <Button Content="-" x:Name="KeyNumMinus" Width="40" Height="35" Tag="Subtract" Style="{StaticResource KeyboardButtonStyle}" FontSize="12" Margin="2"/>
                            </StackPanel>

                            <!-- Row 3: Tab Row -->
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Button Content="Tab" x:Name="KeyTab" Width="60" Height="35" Tag="Tab" Style="{StaticResource KeyboardButtonStyle}" FontSize="9" Margin="2"/>
                                <Button Content="Q" x:Name="KeyQ" Width="40" Height="35" Tag="Q" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="W" x:Name="KeyW" Width="40" Height="35" Tag="W" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="E" x:Name="KeyE" Width="40" Height="35" Tag="E" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="R" x:Name="KeyR" Width="40" Height="35" Tag="R" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="T" x:Name="KeyT" Width="40" Height="35" Tag="T" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="Y" x:Name="KeyY" Width="40" Height="35" Tag="Y" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="U" x:Name="KeyU" Width="40" Height="35" Tag="U" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="I" x:Name="KeyI" Width="40" Height="35" Tag="I" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="O" x:Name="KeyO" Width="40" Height="35" Tag="O" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="P" x:Name="KeyP" Width="40" Height="35" Tag="P" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="[" x:Name="KeyLBracket" Width="40" Height="35" Tag="OemOpenBrackets" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="]" x:Name="KeyRBracket" Width="40" Height="35" Tag="OemCloseBrackets" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="\" x:Name="KeyBackslash" Width="56" Height="35" Tag="OemPipe" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="PgDn" x:Name="KeyPageDown" Width="40" Height="35" Tag="PageDown" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="8,2,8,2"/>
                                <Button Content="7" x:Name="KeyNum7" Width="40" Height="35" Tag="NumPad7" Style="{StaticResource KeyboardButtonStyle}" FontSize="12" Margin="2"/>
                                <Button Content="8" x:Name="KeyNum8" Width="40" Height="35" Tag="NumPad8" Style="{StaticResource KeyboardButtonStyle}" FontSize="12" Margin="2"/>
                                <Button Content="9" x:Name="KeyNum9" Width="40" Height="35" Tag="NumPad9" Style="{StaticResource KeyboardButtonStyle}" FontSize="12" Margin="2"/>
                                <Button Content="+" x:Name="KeyNumPlus" Width="40" Height="35" Tag="Add" Style="{StaticResource KeyboardButtonStyle}" FontSize="12" Margin="2"/>
                            </StackPanel>

                            <!-- Row 4: Caps Lock Row -->
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Button Content="Caps" x:Name="KeyCaps" Width="70" Height="35" Tag="CapsLock" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="2"/>
                                <Button Content="A" x:Name="KeyA" Width="40" Height="35" Tag="A" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="S" x:Name="KeyS" Width="40" Height="35" Tag="S" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="D" x:Name="KeyD" Width="40" Height="35" Tag="D" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="F" x:Name="KeyF" Width="40" Height="35" Tag="F" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="G" x:Name="KeyG" Width="40" Height="35" Tag="G" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="H" x:Name="KeyH" Width="40" Height="35" Tag="H" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="J" x:Name="KeyJ" Width="40" Height="35" Tag="J" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="K" x:Name="KeyK" Width="40" Height="35" Tag="K" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="L" x:Name="KeyL" Width="40" Height="35" Tag="L" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content=";" x:Name="KeySemicolon" Width="40" Height="35" Tag="OemSemicolon" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="'" x:Name="KeyQuote" Width="40" Height="35" Tag="OemQuotes" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="Enter" x:Name="KeyEnter" Width="90" Height="35" Tag="Return" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="2"/>
                                <Button Content="Ins" x:Name="KeyInsert" Width="40" Height="35" Tag="Insert" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="8,2,8,2"/>
                                <Button Content="4" x:Name="KeyNum4" Width="40" Height="35" Tag="NumPad4" Style="{StaticResource KeyboardButtonStyle}" FontSize="12" Margin="2"/>
                                <Button Content="5" x:Name="KeyNum5" Width="40" Height="35" Tag="NumPad5" Style="{StaticResource KeyboardButtonStyle}" FontSize="12" Margin="2"/>
                                <Button Content="6" x:Name="KeyNum6" Width="40" Height="35" Tag="NumPad6" Style="{StaticResource KeyboardButtonStyle}" FontSize="12" Margin="2"/>
                            </StackPanel>

                            <!-- Row 5: Shift Row -->
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Button Content="Shift" x:Name="KeyLShift" Width="90" Height="35" Tag="LeftShift" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="2"/>
                                <Button Content="Z" x:Name="KeyZ" Width="40" Height="35" Tag="Z" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="X" x:Name="KeyX" Width="40" Height="35" Tag="X" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="C" x:Name="KeyC" Width="40" Height="35" Tag="C" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="V" x:Name="KeyV" Width="40" Height="35" Tag="V" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="B" x:Name="KeyB" Width="40" Height="35" Tag="B" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="N" x:Name="KeyN" Width="40" Height="35" Tag="N" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="M" x:Name="KeyM" Width="40" Height="35" Tag="M" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="," x:Name="KeyComma" Width="40" Height="35" Tag="OemComma" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="." x:Name="KeyPeriod" Width="40" Height="35" Tag="OemPeriod" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="/" x:Name="KeySlash" Width="40" Height="35" Tag="OemQuestion" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="Shift" x:Name="KeyRShift" Width="113" Height="35" Tag="RightShift" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="2"/>
                                <TextBlock Width="56"/>
                                <Button Content="1" x:Name="KeyNum1" Width="40" Height="35" Tag="NumPad1" Style="{StaticResource KeyboardButtonStyle}" FontSize="12" Margin="2"/>
                                <Button Content="2" x:Name="KeyNum2" Width="40" Height="35" Tag="NumPad2" Style="{StaticResource KeyboardButtonStyle}" FontSize="12" Margin="2"/>
                                <Button Content="3" x:Name="KeyNum3" Width="40" Height="35" Tag="NumPad3" Style="{StaticResource KeyboardButtonStyle}" FontSize="12" Margin="2"/>
                            </StackPanel>

                            <!-- Row 6: Control Row with Up Arrow -->
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Button Content="Ctrl" x:Name="KeyLCtrl" Width="55" Height="35" Tag="LeftCtrl" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="2"/>
                                <Button Content="Win" x:Name="KeyWin" Width="70" Height="35" Tag="LWin" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="2"/>
                                <Button Content="Alt" x:Name="KeyAlt" Width="56" Height="35" Tag="LeftAlt" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="2"/>
                                <Button Content="SPACE" x:Name="KeySpace" Width="280" Height="35" Tag="Space" Style="{StaticResource KeyboardButtonStyle}" Margin="2"/>
                                <Button Content="Alt" x:Name="KeyRAlt" Width="60" Height="35" Tag="RightAlt" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="2"/>
                                <Button Content="Menu" x:Name="KeyMenu" Width="45" Height="35" Tag="Apps" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="2"/>
                                <Button Content="Ctrl" x:Name="KeyRCtrl" Width="56" Height="35" Tag="RightCtrl" Style="{StaticResource KeyboardButtonStyle}" FontSize="8" Margin="2"/>
                                <Button Content="^" x:Name="KeyUpArrow" Width="40" Height="35" Tag="Up" Style="{StaticResource KeyboardButtonStyle}" FontSize="16" FontWeight="Bold" Margin="8,2,8,2"/>
                                <Button Content="0" x:Name="KeyNum0" Width="87" Height="35" Tag="NumPad0" Style="{StaticResource KeyboardButtonStyle}" FontSize="12" Margin="2"/>
                                <Button Content="." x:Name="KeyNumDecimal" Width="40" Height="35" Tag="Decimal" Style="{StaticResource KeyboardButtonStyle}" FontSize="12" Margin="2"/>
                            </StackPanel>

                            <!-- Row 7: Arrow Keys -->
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <TextBlock Width="604"/>
                                <Button Content="&#60;" x:Name="KeyLeftArrow" Width="40" Height="35" Tag="Left" Style="{StaticResource KeyboardButtonStyle}" FontSize="16" FontWeight="Bold" Margin="2"/>
                                <Button Content="˅" x:Name="KeyDownArrow" Width="40" Height="35" Tag="Down" Style="{StaticResource KeyboardButtonStyle}" FontSize="16" FontWeight="Bold" Margin="10,2"/>
                                <Button Content=">" x:Name="KeyRightArrow" Width="40" Height="35" Tag="Right" Style="{StaticResource KeyboardButtonStyle}" FontSize="16" FontWeight="Bold" Margin="2"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Viewbox>

                <!-- Instructions -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
