<Window x:Class="LaptopHealth.Views.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading" 
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        WindowState="Maximized"
        ShowInTaskbar="False"
        Topmost="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid Background="#00000000">
        <!-- Semi-transparent dark overlay background -->
        
        <!-- Loading image centered on screen with responsive sizing -->
        <Grid HorizontalAlignment="Center" 
              VerticalAlignment="Center"
              Width="400"
              Height="100">
            <Image Source="/Resources/Images/loading.png" 
                   Stretch="Uniform"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
        </Grid>
    </Grid>
</Window>
