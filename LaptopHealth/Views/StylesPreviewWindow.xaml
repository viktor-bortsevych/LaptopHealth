<Window x:Class="LaptopHealth.Views.StylesPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LaptopHealth - Unified Design System" 
        Height="2092" 
        Width="1000"
        Background="{DynamicResource WhiteBrush}"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/Fonts.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40">
            
            <!-- Header -->
            <TextBlock Text="LaptopHealth Design System" 
                      Style="{DynamicResource HeadlineText}" 
                      Foreground="{DynamicResource PrimaryBrush}"
                      FontSize="32"
                      Margin="0,0,0,8"/>
            
            <TextBlock Text="Unified, minimal design system with 5 colors and consistent components" 
                      Style="{DynamicResource BodyText}" 
                      Foreground="{DynamicResource DarkGrayBrush}"
                      Margin="0,0,0,40"/>
            
            <!-- Color Palette Section -->
            <TextBlock Text="Color Palette (5 Colors Only)" 
                      Style="{DynamicResource HeadlineText}"
                      Margin="0,0,0,16"/>
            
            <Border Style="{DynamicResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="4">
                        <Border Background="{DynamicResource WhiteBrush}" 
                               Height="80" 
                               BorderBrush="{DynamicResource PrimaryBrush}" 
                               BorderThickness="2"
                               CornerRadius="6"/>
                        <TextBlock Text="#FFFFFF" 
                                  Style="{DynamicResource BodyText}" 
                                  TextAlignment="Center"
                                  Margin="0,8,0,0"/>
                        <TextBlock Text="White" 
                                  Style="{DynamicResource BodyText}" 
                                  Foreground="{DynamicResource DarkGrayBrush}"
                                  TextAlignment="Center"
                                  FontSize="12"
                                  Margin="0,0,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="4">
                        <Border Background="{DynamicResource PrimaryBrush}" 
                               Height="80"
                               CornerRadius="6"/>
                        <TextBlock Text="#132779" 
                                  Style="{DynamicResource BodyText}" 
                                  TextAlignment="Center"
                                  Margin="0,8,0,0"/>
                        <TextBlock Text="Primary Blue" 
                                  Style="{DynamicResource BodyText}" 
                                  Foreground="{DynamicResource DarkGrayBrush}"
                                  TextAlignment="Center"
                                  FontSize="12"
                                  Margin="0,0,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Margin="4">
                        <Border Background="{DynamicResource DarkGrayBrush}" 
                               Height="80"
                               CornerRadius="6"/>
                        <TextBlock Text="#212121" 
                                  Style="{DynamicResource BodyText}" 
                                  TextAlignment="Center"
                                  Margin="0,8,0,0"/>
                        <TextBlock Text="Dark Gray" 
                                  Style="{DynamicResource BodyText}" 
                                  Foreground="{DynamicResource DarkGrayBrush}"
                                  TextAlignment="Center"
                                  FontSize="12"
                                  Margin="0,0,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="3" Margin="4">
                        <Border Background="{DynamicResource ErrorBrush}" 
                               Height="80"
                               CornerRadius="6"/>
                        <TextBlock Text="#F44336" 
                                  Style="{DynamicResource BodyText}" 
                                  TextAlignment="Center"
                                  Margin="0,8,0,0"/>
                        <TextBlock Text="Error Red" 
                                  Style="{DynamicResource BodyText}" 
                                  Foreground="{DynamicResource DarkGrayBrush}"
                                  TextAlignment="Center"
                                  FontSize="12"
                                  Margin="0,0,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="4" Margin="4">
                        <Border Background="{DynamicResource SuccessBrush}" 
                               Height="80"
                               CornerRadius="6"/>
                        <TextBlock Text="#4CAF50" 
                                  Style="{DynamicResource BodyText}" 
                                  TextAlignment="Center"
                                  Margin="0,8,0,0"/>
                        <TextBlock Text="Success Green" 
                                  Style="{DynamicResource BodyText}" 
                                  Foreground="{DynamicResource DarkGrayBrush}"
                                  TextAlignment="Center"
                                  FontSize="12"
                                  Margin="0,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Text Styles Section -->
            <TextBlock Text="Text Styles (2 Types)" 
                      Style="{DynamicResource HeadlineText}"
                      Margin="0,24,0,16"/>
            
            <Border Style="{DynamicResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Headline Text" 
                              Style="{DynamicResource HeadlineText}"/>
                    <TextBlock Text="Used for titles, section headers, and important text. Bold, 24px." 
                              Style="{DynamicResource BodyText}"
                              Margin="0,0,0,16"/>
                    
                    <Border Style="{DynamicResource DividerStyle}"/>
                    
                    <TextBlock Text="Body Text" 
                              Style="{DynamicResource BodyText}"
                              FontWeight="Bold"/>
                    <TextBlock Text="Used for regular content, descriptions, and paragraphs. Regular weight, 14px. This style supports text wrapping and is optimized for readability." 
                              Style="{DynamicResource BodyText}"/>
                </StackPanel>
            </Border>
            
            <!-- Button Styles Section -->
            <TextBlock Text="Button Styles (3 Types)" 
                      Style="{DynamicResource HeadlineText}"
                      Margin="0,24,0,16"/>
            
            <Border Style="{DynamicResource CardStyle}">
                <StackPanel>
                    <!-- Default Button -->
                    <TextBlock Text="1. Default Button (Filled)" 
                              Style="{DynamicResource BodyText}"
                              FontWeight="Bold"/>
                    <TextBlock Text="Primary action button with solid blue background" 
                              Style="{DynamicResource BodyText}"
                              FontSize="12"
                              Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Button Content="Default Button" 
                               Style="{DynamicResource DefaultButtonStyle}" 
                               Margin="0,0,10,0"/>
                        <Button Content="Disabled" 
                               Style="{DynamicResource DefaultButtonStyle}" 
                               IsEnabled="False"/>
                    </StackPanel>
                    
                    <Border Style="{DynamicResource DividerStyle}"/>
                    
                    <!-- Outline Button -->
                    <TextBlock Text="2. Outline Button" 
                              Style="{DynamicResource BodyText}"
                              FontWeight="Bold"/>
                    <TextBlock Text="Secondary actions with transparent background and blue border" 
                              Style="{DynamicResource BodyText}"
                              FontSize="12"
                              Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Button Content="Outline Button" 
                               Style="{DynamicResource OutlineButtonStyle}" 
                               Margin="0,0,10,0"/>
                        <Button Content="Disabled" 
                               Style="{DynamicResource OutlineButtonStyle}" 
                               IsEnabled="False"/>
                    </StackPanel>
                    
                    <Border Style="{DynamicResource DividerStyle}"/>
                    
                    <!-- Text Button -->
                    <TextBlock Text="3. Text Button (Flat)" 
                              Style="{DynamicResource BodyText}"
                              FontWeight="Bold"/>
                    <TextBlock Text="Minimal button for tertiary actions, no background or border" 
                              Style="{DynamicResource BodyText}"
                              FontSize="12"
                              Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Text Button" 
                               Style="{DynamicResource TextButtonStyle}" 
                               Margin="0,0,10,0"/>
                        <Button Content="Disabled" 
                               Style="{DynamicResource TextButtonStyle}" 
                               IsEnabled="False"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- ComboBox Styles Section -->
            <TextBlock Text="ComboBox Styles (2 Types)" 
                      Style="{DynamicResource HeadlineText}"
                      Margin="0,24,0,16"/>
            
            <Border Style="{DynamicResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="1. Default ComboBox (Outline Style)" 
                              Style="{DynamicResource BodyText}"
                              FontWeight="Bold"/>
                    <TextBlock Text="White background with Primary border and text" 
                              Style="{DynamicResource BodyText}"
                              FontSize="12"
                              Margin="0,0,0,8"/>
                    <TextBlock Text="- Border: Primary Blue (#132779)" 
                              Style="{DynamicResource BodyText}"
                              FontSize="12"
                              Margin="0,0,0,2"/>
                    <TextBlock Text="- Background: White (#FFFFFF)" 
                              Style="{DynamicResource BodyText}"
                              FontSize="12"
                              Margin="0,0,0,2"/>
                    <TextBlock Text="- Text: Primary Blue (#132779)" 
                              Style="{DynamicResource BodyText}"
                              FontSize="12"
                              Margin="0,0,0,8"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <ComboBox Style="{DynamicResource DefaultComboBoxStyle}" 
                                 Width="200"
                                 Height="40" 
                                 Margin="0,0,10,0">
                            <ComboBoxItem IsSelected="True">Enabled Option</ComboBoxItem>
                            <ComboBoxItem>Option 2</ComboBoxItem>
                            <ComboBoxItem>Option 3</ComboBoxItem>
                            <ComboBoxItem>Option 4</ComboBoxItem>
                        </ComboBox>
                        <ComboBox Style="{DynamicResource DefaultComboBoxStyle}" 
                                 Width="200"
                                 Height="40"
                                 IsEnabled="False">
                            <ComboBoxItem IsSelected="True">Disabled State</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    
                    <Border Style="{DynamicResource DividerStyle}"/>
                    
                    <TextBlock Text="2. Outline ComboBox (Filled Style)" 
                              Style="{DynamicResource BodyText}"
                              FontWeight="Bold"/>
                    <TextBlock Text="Primary background with White border and text" 
                              Style="{DynamicResource BodyText}"
                              FontSize="12"
                              Margin="0,0,0,8"/>
                    <TextBlock Text="- Border: White (#FFFFFF)" 
                              Style="{DynamicResource BodyText}"
                              FontSize="12"
                              Margin="0,0,0,2"/>
                    <TextBlock Text="- Background: Primary Blue (#132779)" 
                              Style="{DynamicResource BodyText}"
                              FontSize="12"
                              Margin="0,0,0,2"/>
                    <TextBlock Text="- Text: White (#FFFFFF)" 
                              Style="{DynamicResource BodyText}"
                              FontSize="12"
                              Margin="0,0,0,8"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <ComboBox Style="{DynamicResource OutlineComboBoxStyle}" 
                                 Width="200"
                                 Height="40"
                                 Margin="0,0,10,0">
                            <ComboBoxItem IsSelected="True">Enabled Option</ComboBoxItem>
                            <ComboBoxItem>Option 2</ComboBoxItem>
                            <ComboBoxItem>Option 3</ComboBoxItem>
                            <ComboBoxItem>Option 4</ComboBoxItem>
                        </ComboBox>
                        <ComboBox Style="{DynamicResource OutlineComboBoxStyle}" 
                                 Width="200"
                                 Height="40"
                                 IsEnabled="False">
                            <ComboBoxItem IsSelected="True">Disabled State</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Other Components Section -->
            <TextBlock Text="Supporting Components" 
                      Style="{DynamicResource HeadlineText}"
                      Margin="0,24,0,16"/>
            
            <Border Style="{DynamicResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="TextBox" 
                              Style="{DynamicResource BodyText}"
                              FontWeight="Bold"/>
                    <TextBox Style="{DynamicResource DefaultTextBoxStyle}" 
                            Text="Sample text input" 
                            Height="40" 
                            Margin="0,8,0,20"/>
                    
                    <Border Style="{DynamicResource DividerStyle}"/>
                    
                    <TextBlock Text="Card/Container" 
                              Style="{DynamicResource BodyText}"
                              FontWeight="Bold"/>
                    <TextBlock Text="This is the card container you're seeing throughout this preview" 
                              Style="{DynamicResource BodyText}"
                              FontSize="12"/>
                </StackPanel>
            </Border>
            
            <!-- Footer -->
            <Border Style="{DynamicResource DividerStyle}" Margin="0,30,0,20"/>
            <TextBlock Text="2025 LaptopHealth - Unified Design System" 
                      Style="{DynamicResource BodyText}" 
                      Foreground="{DynamicResource DarkGrayBrush}"
                      TextAlignment="Center"
                      FontSize="12"/>
        </StackPanel>
    </ScrollViewer>
</Window>
