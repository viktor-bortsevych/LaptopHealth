<Window x:Class="LaptopHealth.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaptopHealth.Views"
        mc:Ignorable="d"
        Title="LaptopHealth" Height="600" Width="900"
        Background="{StaticResource SurfaceBrush}"
        Icon="pack://application:,,,/Resources/Images/app.ico">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <!-- Top Section: Progress Menu with Navigation -->
            <RowDefinition Height="40"/>
            <!-- Main Content Area - Test Page -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Section (Progress + Navigation) -->
        <Border Grid.Row="0" Background="{StaticResource BackgroundBrush}" BorderBrush="{StaticResource SurfaceBrush}" BorderThickness="0,0,0,2">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <!-- Left Navigation Button -->
                    <ColumnDefinition Width="44"/>
                    <!-- Progress Indicators -->
                    <ColumnDefinition Width="*"/>
                    <!-- Right Navigation Button -->
                    <ColumnDefinition Width="44"/>
                </Grid.ColumnDefinitions>

                <!-- Previous Button (Left) -->
                <Button Grid.Column="0"
                        x:Name="PreviousButton"
                        Content="◀"
                        Width="28"
                        Height="28"
                        FontSize="16"
                        FontWeight="Normal"
                        FontFamily="{StaticResource DongleFontFamily}"
                        Style="{StaticResource OutlineButtonStyle}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="8,2,0,2"
                        Padding="0,2,0,0"
                        Click="PreviousButton_Click"
                        Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Self}, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- Progress Menu (Center) -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- Progress Indicators Container -->
                    <StackPanel x:Name="ProgressIndicatorsPanel" Orientation="Horizontal" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Next Button (Right) -->
                <Button Grid.Column="2"
                        x:Name="NextButton"
                        Content="▶"
                        Width="28"
                        Height="28"
                        FontSize="16"
                        FontWeight="Bold"
                        FontFamily="{StaticResource DongleFontFamily}"
                        Style="{StaticResource OutlineButtonStyle}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,0,8,0"
                        Padding="0,2,0,0"
                        Click="NextButton_Click"
                        Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Self}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
        </Border>

        <!-- Main Content Area - Dynamic Test Page -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundBrush}">
            <ContentControl x:Name="TestContentArea" />
        </Border>
    </Grid>
</Window>
